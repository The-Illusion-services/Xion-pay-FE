{
  "compilerOptions": {
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"],
      "@types": ["types"],
      "@utils/*": ["utils/*"],
      "@hooks": ["hooks/index"],
      "@services": ["services/index"],
      "@shadcn-ui/*": ["components/ui/*"],
      "@pages": ["components/pages/index"],
      "@layouts": ["components/layouts/index"],
      "@illusion-ui": ["components/illusion-ui/index"],
      "@illusion-icons": ["components/illusion-icons/index"],
      "@illusion-illustrations": ["components/illusion-illustrations/index"]
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx"],
  "exclude": ["node_modules"]
}
